{
  "editor.formatOnSave": true,
  "html.format.enable": true,
  // https://github.com/ben-rogerson/twin.macro/discussions/227
  "tailwindCSS.experimental.classRegex": [
    "tw`([^`]*)", // tw`...`
    "tw=\"([^\"]*)", // <div tw="..." />
    "tw={\"([^\"}]*)", // <div tw={"..."} />
    "tw\\.\\w+`([^`]*)", // tw.xxx`...`
    "tw\\(.*?\\)`([^`]*)" // tw(Component)`...`
  ],
  "less.lint.unknownAtRules": "ignore"
}
